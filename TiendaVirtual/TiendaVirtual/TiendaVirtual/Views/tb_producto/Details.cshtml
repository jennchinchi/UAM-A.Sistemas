<p>
    <a href="#" class="AddLink"
       data-id="@Model.id_producto" data-toggle="modal" data-target="#myModal">
        Agregar al carrito
    </a>
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        @Html.ActionLink("Editar", "Edit", new { id = Model.id_producto})

    }
