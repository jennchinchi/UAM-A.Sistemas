                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="~/Home/Index">
                <img style="height: 30px;"
                     src="~/images/logo.png"  /><br />
            </a>
        </div>
        <div class="navbar-collapse collapse navbar-inverse-collapse">
            <ul class="nav navbar-nav">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <span class="glyphicon glyphicon-home"></span> Sitio<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>   
                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    </ul>
                </li>
                <!-- Categorias -->
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Celulares & Tablets <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Subcategoria 1</a></li>
                        <li><a href="#">Subcategoria 1</a></li>
                        <li><a href="#">Subcategoria 1</a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Subtitulo</li>
                        <li><a href="#">Subcategoria 1</a></li>
                        <li><a href="#">Subcategoria 1</a></li>
                    </ul>
                </li>
                <!-- Categorias -->
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hogar<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Subcategoria 2</a></li>
                        <li><a href="#">Subcategoria 2</a></li>
                        <li><a href="#">Subcategoria 2 </a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Subtitulo</li>
                        <li><a href="#">Subcategoria 2</a></li>
                        <li><a href="#">Subcategoria 2</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Automóvil<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Subcategoria 3</a></li>
                        <li><a href="#">Subcategoria 3</a></li>
                        <li><a href="#">Subcategoria 3 </a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Subtitulo</li>
                        <li><a href="#">Subcategoria 3</a></li>
                        <li><a href="#">Subcategoria 3</a></li>
                    </ul>
                </li>
            </ul>
            <div> </div>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 
                    <span class="glyphicon glyphicon-log-in"></span> Cuenta <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>  @Html.Partial("_LoginPartial")</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <!-- Fin Barra de Navegacion -->
    <!-- Cuerpo de la Pagina -->
    <div class="container body-content">
        @RenderBody()
    <!-- Fin de Cuerpo de la Pagina -->
        <hr />
        <!-- Footer -->
        <footer class="text-center">
            <div class="footer-below">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            Diseño y Desarrollo por InfoSoluciones - @DateTime.Now.Year
                        </div>
                        <div class="col-lg-4">
                            <img class="center-block" style="height: 45px;" src="~/images/InfoSoluciones_3.JPG" />
                        </div>
                        <div class="col-lg-4 copyright">
                            Copyright &copy; AsoDell
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- Scripts Necesarios -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>