@model TiendaVirtual.Models.tb_factura
@{
    ViewBag.Title = "Detalle";
}
<h2>Detalles de la factura: @Html.DisplayFor(model => model.id_factura)</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Costo Total
        </dt>
        <dd>
            @Html.DisplayFor(model => model.costo_total)
        </dd>
        <dt>
            Fecha
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>
        <dt>
            Usuario
        </dt>
        <dd>
            @Html.DisplayFor(model => model.usuario)
        </dd>
    </dl>
</div>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
    </tr>
    @foreach (var item in Model.tb_detalle)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tb_producto.nombre_prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Atrás", "Lista","tb_factura")
</p>
