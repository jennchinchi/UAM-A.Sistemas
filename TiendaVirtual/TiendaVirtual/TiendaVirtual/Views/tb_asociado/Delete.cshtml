@model TiendaVirtual.Models.tb_asociado

@{
    ViewBag.Title = "Borrado";
}

<h3>Confirma el borrado!</h3>

<h4>Estas a punto de eliminar este asociado?</h4>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nombre de la persona")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tb_persona.nombre)
        </dd>
        <dt>
            @Html.DisplayName("Correo Electronico")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo_electronico)
        </dd>

        <dt>
            @Html.DisplayName("Estado del Asociado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tb_estado.descripcion)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Ir atras <-", "Index")
        </div>
    }
</div>
